		    <td><?= link_to('Show', $controller_name, array(":action" => 'show', ":id" => $model)) ?></td>
		    <td><?= link_to('Edit', $controller_name, array(":action" => 'edit', ":id" => $model)) ?></td>
		    <td><?= link_to('Delete', $controller_name, array(":action" => 'delete', ":id" => $model, ":confirm" => "Are you sure?")) ?></td>
	    </tr>
	<? endforeach; ?>
<? else: ?>
	<tr>
		<td>No <?= $model_name_plural ?> found.</td>
	</tr>
