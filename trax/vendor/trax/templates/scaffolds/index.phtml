<table border="0" cellpadding="2" cellspacing="2">
<? if(count($models)): ?> 
	<tr> 
	    <? foreach($table_info as $column): ?>
	        <th><?= $column['human_name'] ?></th>
        <? endforeach; ?>
	</tr>
  
	<? foreach($models as $model): ?>   
	    <tr>
		    <? foreach($model->table_info as $column): ?>
